#!/usr/bin/env ruby

require "rake"

plugin_path = Pathname(__FILE__).dirname.parent
executable_path = plugin_path + "lib/drawText"

# Run the script
allArgs = ARGV.map { |arg|

	argParts = arg.split("=")
	argParts[1] = '"' + argParts[1] + '"'

	argParts.join("=")

}.join(" ")

exec("#{executable_path} #{allArgs}")
