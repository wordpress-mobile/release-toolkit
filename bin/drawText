#!/usr/bin/env ruby

require "rake"

plugin_path = Pathname(__FILE__).dirname.parent
executable_path = plugin_path + "lib/drawText"

# Compile drawText if it hasn't been
unless File.exist?(executable_path) then
	Dir.chdir(plugin_path) do
    puts Dir.pwd
    load 'Rakefile'
    Rake::Task['compile'].invoke
  end
end

# Run the binary
allArgs = ARGV.join(" ")
`#{executable_path} #{allArgs}`
